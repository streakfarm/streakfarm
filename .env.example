# =====================================
# STREAKFARM - ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and fill in real values
# NEVER commit .env to git!

# ============ NODE ENVIRONMENT ============
NODE_ENV=development

# ============ API URLs ============
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# ============ DATABASE (SUPABASE) ============
DATABASE_URL=postgresql://postgres:password@localhost:5432/streakfarm
SUPABASE_URL=https://xxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============ REDIS ============
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ============ TELEGRAM ============
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=https://api.yourdomain.com/api/webhook

# ============ TON BLOCKCHAIN ============
TON_API_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here
TREASURY_ADDRESS=EQxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TREASURY_MNEMONIC="word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12 word13 word14 word15 word16 word17 word18 word19 word20 word21 word22 word23 word24"

# ============ JWT SECRETS ============
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_characters_long
ADMIN_JWT_SECRET=your_admin_jwt_secret_min_32_characters_long

# ============ ENCRYPTION ============
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============ MONITORING & OBSERVABILITY ============
SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxxxxxx
DATADOG_API_KEY=your_datadog_api_key_here
LOG_LEVEL=info

# ============ RATE LIMITING ============
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============ GAME CONFIGURATION ============
LAUNCH_DATE=2026-01-15T00:00:00Z
EARLY_ADOPTER_LIMIT=10000
LAUNCH_WEEK_MULTIPLIER=3
FOUNDING_MEMBER_MULTIPLIER=2

# ============ CORS ============
CORS_ORIGIN=http://localhost:3000,https://t.me

# ============ EMAIL (OPTIONAL) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============ AWS S3 (OPTIONAL) ============
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=streakfarm-assets

# ============ FEATURE FLAGS ============
FEATURE_WALLET_ENABLED=true
FEATURE_NFT_BADGES_ENABLED=false
FEATURE_TOKEN_LAUNCH_ENABLED=false
FEATURE_MARKETPLACE_ENABLED=false
